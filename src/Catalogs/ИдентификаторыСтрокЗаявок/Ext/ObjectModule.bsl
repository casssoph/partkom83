			ТипПоставки = Перечисления.ТипПоставки.Кросс;
		ИначеЕсли ПрайсПоставщика.Склад.СкладVMI Тогда
			ТипПоставки = Перечисления.ТипПоставки.VMI;
		Иначе
			ТипПоставки = Перечисления.ТипПоставки.Кросс;
		КонецЕсли;
	КонецЕсли;
	
