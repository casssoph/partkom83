					И вт.ДатаПросрочки &lt;= ДОБАВИТЬКДАТЕ(вт.Период, ДЕНЬ, -&amp;ГлубинаКонец)
				ТОГДА вт.СуммаУпрКонечныйОстаток
			ИНАЧЕ 0
		КОНЕЦ) КАК Сумма,
	вт.Менеджер
ИЗ
	вт КАК вт

СГРУППИРОВАТЬ ПО
	вт.Период,
	вт.Контрагент,
	вт.Регион,
	вт.Менеджер</query>
