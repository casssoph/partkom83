	Если Не лЗамена = Неопределено Тогда		
		Выполнить(лЗамена);
		Возврат;		
	КонецЕсли;
	
	///////////////////////////////////////////////////////////////////////////
	
	ИспользоватьРазделениеРТУПоДатеОплаты = ОбщегоНазначенияПовтИсп.ЗначениеКонстанты("ИспользоватьРазделениеРТУПоДатеОплаты");	
	
	Если ТипЗнч(ДанныеЗаполнения) = Тип("ДокументСсылка.АктРассмотренияВозврата") Тогда
		
		АктРассмотренияВозврата = ДанныеЗаполнения;
		
		Реквизиты = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ДанныеЗаполнения, "УчитыватьНДС,СуммаВключаетНДС, ВиновноеЛицоДляСписания,ВариантСписания");
		
		Если Реквизиты.ВариантСписания <> Перечисления.ВариантыСписанияВозврата.ПродажаНаВиновноеЛицо Тогда
			ТекстОшибки = "Реализацию можно ввести только для варианта списания ""Продажа на виновное лицо""";
			Сообщить(ТекстОшибки);
			ВызватьИсключение ТекстОшибки;
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(ЭтотОбъект, Реквизиты);
		ВалютаДокумента = мВалютаРегламентированногоУчета;
		КурсВзаиморасчетов 		= 1;
		КратностьВзаиморасчетов = 1;
		
		Контрагент = Реквизиты.ВиновноеЛицоДляСписания;
		
		//Считаем что все на одном складе
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	АктРассмотренияВозвратаТовары.Номенклатура,
		|	АктРассмотренияВозвратаТовары.СтрокаПрихода,
		|	АктРассмотренияВозвратаТовары.КоличествоРазмещено
		|ПОМЕСТИТЬ втТовары
		|ИЗ
		|	Документ.АктРассмотренияВозврата.Товары КАК АктРассмотренияВозвратаТовары
		|ГДЕ
		|	АктРассмотренияВозвратаТовары.Ссылка = &Ссылка
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	ПартииТоваровОстатки.Склад,
		|	ПартииТоваровОстатки.Организация
		|ИЗ
		|	РегистрНакопления.ПартииТоваров.Остатки(
		|			,
		|			(Номенклатура, СтрокаПрихода) В
		|				(ВЫБРАТЬ
		|					втТовары.Номенклатура,
		|					втТовары.СтрокаПрихода
		|				ИЗ
		|					втТовары)) КАК ПартииТоваровОстатки";
		Запрос.УстановитьПараметр("Ссылка", АктРассмотренияВозврата);
		
		Выборка = Запрос.Выполнить().Выбрать();
		Если Выборка.Следующий() Тогда
			Склад 		= Выборка.Склад;	
		КонецЕсли;
		
		Если Не ЗначениеЗаполнено(Склад) Тогда
			ТекстОшибки = "Не определен склад для списания товаров";
			Сообщить(ТекстОшибки);
			ВызватьИсключение ТекстОшибки;
		КонецЕсли;
		
		МаршрутДоставки 	= Склад.ФизическийСклад.МаршрутДоставкиСамовывоза;
		ТипДоставки 		= Справочники.ТипыДоставки.Самовывоз;
		ДоговорКонтрагента 	= Контрагент.ОсновнойДоговорКонтрагента;
		Филиал 				= ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Склад, "Филиал");
		
		Если Не ЗначениеЗаполнено(ДоговорКонтрагента) Тогда
			ТекстОшибки =  "Не определен основной договор контрагента "+Контрагент;
			Сообщить(ТекстОшибки);
			ВызватьИсключение ТекстОшибки;
		КонецЕсли;
		
		Организация			= ДоговорКонтрагента.Организация;
		
		УстановитьКонтрагентаВзаиморасчетов();
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	АктРассмотренияВозвратаТовары.Номенклатура,
		|	АктРассмотренияВозвратаТовары.ЕдиницаИзмерения,
