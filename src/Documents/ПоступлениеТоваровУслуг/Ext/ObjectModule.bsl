	);
	Запрос.УстановитьПараметр("Ссылка", КонтрагентПоиска);
	Выборка = Запрос.Выполнить().Выбрать();
	Выборка.Следующий();
	СтруктураОтбора.Вставить("ЗаказРавенПриходу", Выборка.ЗаказРавенПриходу);
