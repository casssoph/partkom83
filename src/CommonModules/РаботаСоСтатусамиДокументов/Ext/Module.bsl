Функция ПодобратьНеслужебныйДоговор(ДоговорКонтрагента) Экспорт
	ПараметрыВходящегоДоговора = ОбщегоНазначения.ПолучитьЗначенияРеквизитов(ДоговорКонтрагента,
	"Владелец,ВидДоговора,Организация,ДоговорИнвестКонтракт,СлужебныйДоговор");
	
	Если НЕ ПараметрыВходящегоДоговора.СлужебныйДоговор Тогда
		Возврат ДоговорКонтрагента;
	КонецЕсли;
	
	Запрос = Новый Запрос(
	"ВЫБРАТЬ
	|	ДоговорыКонтрагентов.Ссылка
	|ИЗ
	|	Справочник.ДоговорыКонтрагентов КАК ДоговорыКонтрагентов
	|ГДЕ
	|	ДоговорыКонтрагентов.Владелец = &Владелец
	|	И ДоговорыКонтрагентов.ВидДоговора = &ВидДоговора
	|	И ДоговорыКонтрагентов.Организация = &Организация
	|	И ДоговорыКонтрагентов.ДоговорИнвестКонтракт = &ДоговорИнвестКонтракт
	|	И НЕ ДоговорыКонтрагентов.ПометкаУдаления
	|	И НЕ ДоговорыКонтрагентов.СлужебныйДоговор"
	);
	Запрос.УстановитьПараметр("Владелец", ПараметрыВходящегоДоговора.Владелец);
	Запрос.УстановитьПараметр("ВидДоговора", ПараметрыВходящегоДоговора.ВидДоговора);
	Запрос.УстановитьПараметр("Организация", ПараметрыВходящегоДоговора.Организация);
	Запрос.УстановитьПараметр("ДоговорИнвестКонтракт", ПараметрыВходящегоДоговора.ДоговорИнвестКонтракт);
	
	Р = Запрос.Выполнить();
	Если Р.Пустой() Тогда
		Возврат ДоговорКонтрагента;
	КонецЕсли;
	
	Выборка = Р.Выбрать();
	Выборка.Следующий();
	
	Возврат Выборка.Ссылка;
	
КонецФункции

Функция ПодобратьДоговорКонтрагентаПоВиду(Контрагент, Организация, ВидДоговора) Экспорт
	Запрос = Новый Запрос(
	"ВЫБРАТЬ
	|	ДоговорыКонтрагентов.Ссылка
	|ИЗ
	|	Справочник.ДоговорыКонтрагентов КАК ДоговорыКонтрагентов
	|ГДЕ
	|	ДоговорыКонтрагентов.Владелец = &Владелец
	|	И ДоговорыКонтрагентов.ВидДоговора = &ВидДоговора
	|	И ДоговорыКонтрагентов.Организация = &Организация
	|	И НЕ ДоговорыКонтрагентов.ПометкаУдаления
	|	И НЕ ДоговорыКонтрагентов.СлужебныйДоговор"
	);
	Запрос.УстановитьПараметр("Владелец", Контрагент);
	Запрос.УстановитьПараметр("ВидДоговора", ВидДоговора);
	Запрос.УстановитьПараметр("Организация", Организация);
		
	Р = Запрос.Выполнить();
	Если Р.Пустой() Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Выборка = Р.Выбрать();
	Выборка.Следующий();
	
	Возврат Выборка.Ссылка;
	
КонецФункции

Функция ПодобратьДоговорКонтрагентаПоДокументу(СсылкаНаДокумент) Экспорт
	Если ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.ЗаказПоставщику")
		ИЛИ ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.ПоступлениеТоваровУслуг")
		ИЛИ ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.ВозвратТоваровПоставщику") Тогда
		Склад = ОбщегоНазначения.ПолучитьЗначениеРеквизита(СсылкаНаДокумент, "Склад");
		Если НЕ ЗначениеЗаполнено(Склад) Тогда
			Возврат Неопределено;
		
		КонецЕсли;
		Если ОбщегоНазначения.ПолучитьЗначениеРеквизита(Склад, "СкладVMI") Тогда
			ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.ОтветХранение;
		Иначе
			ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.СПоставщиком;
		КонецЕсли;
		
	ИначеЕсли ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.ЗаявкаПокупателя")
		ИЛИ ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.РеализацияТоваровУслуг")
		ИЛИ ТипЗнч(СсылкаНаДокумент) = Тип("ДокументСсылка.ВозвратТоваровОтПокупателя") Тогда
		ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.СПокупателем;
	Иначе
		Возврат Неопределено;
		
	КонецЕсли;
	
	Контрагент = ОбщегоНазначения.ПолучитьЗначениеРеквизита(СсылкаНаДокумент, "Контрагент");
	Если НЕ ЗначениеЗаполнено(Контрагент) Тогда
		Возврат Неопределено;
		
	КонецЕсли;
	
	Организация = ОбщегоНазначения.ПолучитьЗначениеРеквизита(СсылкаНаДокумент, "Организация");
	Если НЕ ЗначениеЗаполнено(Организация) Тогда
		Возврат Неопределено;
		
	КонецЕсли;
	
	Возврат ПодобратьДоговорКонтрагентаПоВиду(Контрагент, Организация, ВидДоговора);
	
КонецФункции
